<div class="container">
    <h2 class="my-5">商品詳細</h2>
    <div class="row">
      <table class="table table-borderless">
        <div class="col-md-4">
          <%= image_tag @item.image, size: "200x200" %>
            <thead>
                <tr><th>商品名</th><td><%= @item.name %></td></tr>
                <tr><th>商品説明</th><td><%= @item.introduction %></td></tr>
                <tr><th>ジャンル</th><td><%= @item.genre_id %></td></tr>
                <tr><th>税込み価格</th><td><%= @item.add_tax_items_price.to_s(:dalimited) %>円 (税抜価格: <%= @item.price %>円）</td></tr>
                <tr><th>販売ステータス</th><td><% if @item.is_active %>
                    <span class="text-success font-weight-bold">販売中</span>
                  <% else %>
                    <span class="text-secondary font-weight-bold">販売停止中</span>
                  <% end %>
                <tr><th><td><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success text-white" %></td></th></tr>
            </thead>
          </div>
        </div>
      </table>
    </div>
  </div>