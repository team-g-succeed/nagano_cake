  <div class="container">
    <h2 class="my-5">商品新規登録</h2>
    <%= form_with model: @item, url: admin_items_path, local: true do |form| %>
      <div class="mb-3 row">
        <%= form.label :商品画像 %><br>
        <%= form.file_field :image %>
      </div>
      <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">商品名</label>
        <div class="col-sm-10">
          <%= form.text_field :name, placeholder: '商品名', required: true, class: 'form-control' %>
        </div>
      </div>
      <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">商品説明</label>
        <div class="col-sm-10">
          <%= form.text_area :introduction, placeholder: '商品説明', rows: 3, required: true, class: 'form-control' %>
        </div>
      </div>

      </div>
      <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">税抜き価格</label>
        <div class="col-sm-10">
          <%= form.text_field :price, placeholder: '1000', required: true, class: 'form-control' %>
        </div>
      </div>
      <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">販売ステータス</label>
        <div class="col-sm-10">
          <div class="form-check form-check-inline">
            <%= form.radio_button :is_active, true, checked: true, class: "form-check-input" %>
            <%= form.label :is_active_true, "販売中", class: "form-check-label" %>
          </div>
          <div class="form-check form-check-inline">
            <%= form.radio_button :is_active, false, class: "form-check-input" %>
            <%= form.label :_false, "販売停止中", class: "form-check-label" %>
          </div>
        </div>
      </div>
      <div class="mb-3 row">
        <div class="col-sm-10 offset-sm-2">
          <%= form.submit "新規登録", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>