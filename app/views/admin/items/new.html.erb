<%= form_with(model: @item, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :image, "商品画像" %>
    <%= form.file_field :image, class: "form-control-file" %>
    <small class="form-text text-muted">選択されていません</small>
  </div>

  <div class="form-group">
    <%= form.label :name, "商品名" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :introduction, "商品説明" %>
    <%= form.text_area :introduction, rows: 3, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :genre_id, "ジャンル" %>
    <%= form.collection_select :genre_id, Genre.all, :id, :name, {}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= form.label :price, "税抜価格" %>
    <%= form.number_field :price, class: "form-control" %>
    <small class="form-text text-muted">円</small>
  </div>

  <div class="form-group">
    <%= form.label :in_active, "販売ステータス" %>
    <div class="form-check">
      <%= form.radio_button :in_active, true, class: "form-check-input" %>
      <%= form.label :in_active_true, "販売中", class: "form-check-label" %>
    </div>
    <div class="form-check">
      <%= form.radio_button :in_active, false, class: "form-check-input" %>
      <%= form.label :in_active_false, "販売停止中", class: "form-check-label" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit "新規登録", class: "btn btn-primary" %>
  </div>
<% end %>
