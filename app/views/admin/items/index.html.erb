<div class="container">
    <h2 class="my-5">商品一覧</h2>
    <table class="table">
        <thead>
            <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th>ステータス</th>
            </tr>
            <tbody>
                <% @items.each do |item| %>
                <tr>
                  <td>
                     <%= link_to admin_item_path(item) do %>
                      <%= item.id %>
                     <% end %>
                  </td>
                  <td><%= item.name %></td>
                  <td><%= item.price %></td>
                  <td><%= item.genre_id %></td>
                  <td><%= item.is_active %></td>
                </tr>
                <% end %>
            </tbody>
        </thead>
    </table>
    <div class="d-flex justifr-content-center"><%= paginate(@items) %></div>